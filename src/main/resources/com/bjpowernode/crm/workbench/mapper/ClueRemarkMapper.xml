<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.bjpowernode.crm.workbench.mapper.ClueRemarkMapper">

    <resultMap id="clueRemarkResultMap" type="ClueRemark">
        <id column="id" property="id"/>
        <result property="noteContent" column="note_content"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="editBy" column="edit_by"/>
        <result property="editTime" column="edit_time"/>
        <result property="editFlag" column="edit_flag"/>
        <result property="clueId" column="clue_id"/>
    </resultMap>
    <sql id="crSql">
        id,
        note_content,
        create_by,
        create_time,
        edit_by,
        edit_time,
        edit_flag,
        clue_id
    </sql>
    <insert id="insertClueRemark">
        insert into tbl_clue_remark(
            <include refid="crSql"></include>
        )values (
        #{id},
        #{noteContent},
        #{createBy},
        #{createTime},
        #{editBy},
        #{editTime},
        #{editFlag},
        #{clueId}
        )
    </insert>
    <update id="updateClueRemark">
        update tbl_clue_remark
        set note_content = #{noteContent},
            edit_by = #{editBy},
            edit_time = #{editTime},
            edit_flag = #{editFlag}
        where id = #{id}
    </update>
    <delete id="deleteClueRemarkById">
        delete
        from tbl_clue_remark
        where id = #{id};
    </delete>
    <select id="selectClueRemarkByClueId" resultMap="clueRemarkResultMap">
        select
            cr.id,
            cr.note_content,
            u1.name create_by,
            cr.create_time,
            u2.name edit_by,
            cr.edit_time,
            cr.edit_flag,
            cr.clue_id
        from tbl_clue_remark cr
        left join tbl_user u1
        on cr.create_by = u1.id
        left join tbl_user u2
        on cr.edit_by = u2.id
        where cr.clue_id = #{clueId}
        order by cr.create_time
    </select>
</mapper>
